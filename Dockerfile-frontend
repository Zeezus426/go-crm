# syntax=docker.io/docker/dockerfile:1

FROM node:20-slim AS base

# Install system dependencies required by Sharp
RUN apt-get update && apt-get install -y \
    libvips-dev \
    build-essential \
    python3 \
    --no-install-recommends \
    && rm -rf /var/lib/apt/lists/*

# Install dependencies only when needed
FROM base AS deps
WORKDIR /app

# Force cache bust with current date/time (uncomment for production builds)
RUN echo "Cache bust: $(date) - epoch: $(date +%s) - Sharp fix with libvips v2"

# Install dependencies based on the preferred package manager
COPY package.json yarn.lock* package-lock.json* pnpm-lock.yaml* .npmrc* ./
# Use --force flag for React 19 compatibility
RUN \
  if [ -f yarn.lock ]; then yarn --frozen-lockfile; \
  elif [ -f package-lock.json ]; then npm ci --force; \
  elif [ -f pnpm-lock.yaml ]; then corepack enable pnpm && pnpm i --frozen-lockfile; \
  else echo "Lockfile not found." && exit 1; \
  fi

# Explicitly install platform-specific packages for Linux GNU
# These are all the native dependencies that Next.js and Tailwind CSS v4 need
RUN npm install --force --no-save \
  @rollup/rollup-linux-x64-gnu \
  @next/swc-linux-x64-gnu \
  lightningcss-linux-x64-gnu \
  @img/sharp-linux-x64 \
  @tailwindcss/oxide-linux-x64-gnu

# Rebuild any additional native modules for the target platform
RUN npm rebuild --force

# Rebuild the source code only when needed
FROM base AS builder
WORKDIR /app
COPY --from=deps /app/node_modules ./node_modules
COPY . .

# Accept build arguments for environment variables

ARG NEXT_PUBLIC_API_URL
ARG NEXT_PUBLIC_ECOM_MAIN_BASE_URL
# Set them as environment variables for the build
# Environment variables are injected by CapRover, no need to copy .env files

# Next.js collects completely anonymous telemetry data about general usage.
# Learn more here: https://nextjs.org/telemetry
# Uncomment the following line in case you want to disable telemetry during the build.
ENV NEXT_TELEMETRY_DISABLED=1

# Build with increased memory for large builds
RUN npm run build

# Production image, copy all the files and run next
FROM base AS runner
WORKDIR /app

ENV NODE_ENV=production
# Uncomment the following line in case you want to disable telemetry during runtime.
ENV NEXT_TELEMETRY_DISABLED=1

# Install curl for healthcheck (required for zero-downtime deployments)
RUN apt-get update && apt-get install -y --no-install-recommends curl \
  && rm -rf /var/lib/apt/lists/*

RUN groupadd --system --gid 1001 nodejs
RUN useradd --system --uid 1001 --gid nodejs nextjs

COPY --from=builder /app/public ./public

# Automatically leverage output traces to reduce image size
# https://nextjs.org/docs/advanced-features/output-file-tracing
COPY --from=builder --chown=nextjs:nodejs /app/.next/standalone ./
COPY --from=builder --chown=nextjs:nodejs /app/.next/static ./.next/static

USER nextjs

EXPOSE 3000

ENV PORT=3000

# server.js is created by next build from the standalone output
# https://nextjs.org/docs/pages/api-reference/config/next-config-js/output
# CRITICAL: Set HOSTNAME to 0.0.0.0 to listen on all interfaces (not just localhost)
HEALTHCHECK --interval=30s --timeout=30s --retries=3 \
  CMD curl -f http://127.0.0.1:3000/ || exit 1

ENV HOSTNAME="0.0.0.0"

CMD ["node", "server.js"]